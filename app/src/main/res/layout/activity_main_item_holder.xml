<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="mainActivityModel"
            type="th.in.pnnutkung.skeassistant.models.main_activity.MainActivityGridModel"/>
    </data>
    <RelativeLayout
        android:layout_width="@dimen/main_activity_item_holder_width"
        android:layout_height="@dimen/main_activity_item_holder_height"
        android:padding="@dimen/main_activity_padding"
        android:background="?attr/selectableItemBackground">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/main_activity_grid_image_view"
                android:src="@{mainActivityModel.icon}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/main_activity_grid_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{mainActivityModel.description}"
                android:textColor="@color/black"
                android:textSize="@dimen/font_body_1"
                android:fontFamily="roboto"
                android:textStyle="normal"
                />
        </LinearLayout>
    </RelativeLayout>
</layout>